<div class="new-user-form">
	<%= form_for :user, url: sessions_path do |user| %>
	  
	  	<% if @errors %>
		  	<div class="alert alert-danger" role="alert">
		  		<a href="#" class="close" data-dismiss="alert">&times;</a>
		      <strong>Error!</strong> <%= @errors %>
	      </div>
	  	<% end %>
		

	  <div class="form-group">
	    <%= user.label :email_address, class: "col-sm-3 control-label" %> 
	    <div class="col-sm-8">
	    	<%= user.email_field :email_address, class: "form-control", placeholder: "Enter your email" %><br>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= user.label :enter_password, class: "col-sm-3 control-label" %> 
	    <div class="col-sm-8">
	    	<%= user.password_field :password, class: "form-control", placeholder: "Enter your password" %><br>
	    </div>
	  </div>

	  <br>
	  <div class="col-sm-2">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Log in
      <% end %>
    </div>

	<% end %>
</div>