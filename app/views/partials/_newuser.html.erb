<div class="new-user-form">
  <%= form_for @user, url: {action: "create"}, role: "form" do |f| %>
    
    <div class="form-group">
      <%= f.label :name, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email_address, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.email_field :email_address, class: "form-control", placeholder: "example@example.com" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter your password again" %><br>
      </div>
    </div>

    <br>
    <div class="col-sm-2">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Sign up
      <% end %>
    </div>
  <% end %>
</div>

