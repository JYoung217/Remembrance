<div class="new_memorial_form">
  <%= form_for @memorial, url: {action: "create"} do |f| %>
    
    <%= f.label :deceased_name %><br>
    <%= f.text_field :deceased_name %>

    <%= f.label :date_of_birth %><br>
    <%= f.date_field :date_of_birth %>

    <%= f.label :date_of_death %><br>
    <%= f.date_field :date_of_death %>

    <%= f.label :obituary_description %><br>
    <%= f.text_area :obituary_description %>

    <%= f.label :service_description %><br>
    <%= f.text_area :service_description %>

    <%= f.submit %>
  <% end %>
</div>
