<ul class="post-settings-list">
  <% if post.state == "1" || post.state == "3" %>
    <% if @current_user = post.author %>
      <li role="presentation"><%= link_to 'Edit post', edit_memorial_post_path(memorial, post), id: "edit-memorial-post", role: "menuitem", tabindex: "-1"%></li>
      <li role="presentation"><%= link_to "Delete Post", { controller: "posts", action: "destroy", memorial_id: @memorial.id, id: post.id }, method: :delete, data: { confirm: "Are you sure?" }, role: "menuitem", tabindex: "-1" %></li>
    <% end %>
    <li role="presentation"><%= link_to "Add a comment", new_memorial_post_comment_path(memorial, post), id: "new-memorial-comment", role: "menuitem", tabindex: "-1" %></li>
  <% elsif post.state == "0" %>
    <li role="presentation"><%= link_to "Report", "/posts/#{post.id}/report", class: "btn btn-default btn-sm report" %></li>
    <% if @current_user = post.author %>
      <li role="presentation"><%= link_to 'Edit post', edit_memorial_post_path(memorial, post), id: "edit-memorial-post", role: "menuitem", tabindex: "-1"%></li>
      <li role="presentation"><%= link_to "Delete Post", { controller: "posts", action: "destroy", memorial_id: @memorial.id, id: post.id }, method: :delete, data: { confirm: "Are you sure?" }, role: "menuitem", tabindex: "-1" %></li>
    <% end %>
    <li role="presentation"><%= link_to "Add a comment", new_memorial_post_comment_path(memorial, post), id: "new-memorial-comment", role: "menuitem", tabindex: "-1" %></li>
  <% end %>
</ul>

